<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/header.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>
    <br /><br />
    <h1 class="index">BLOGS</h1>
    <% if(blogs.length>0){ %> <% blogs.forEach((blog)=>{ %>
    <a class="blog" href="/blogs/<%= blog._id %>">
      <div class="blog-box">
        <h3 class="box-h3"><%= blog.title %></h3>
        <p class="box-p"><%= blog.snippets %></p>
      </div>
    </a>
    <% }) %> <% }else{ %>
    <p>There are no blogs to display....</p>
    <% } %> <%- include("./partials/footer.ejs") %>
  </body>
</html>
